<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Meeting.MeetingActBuyer">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="#708090"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/meeting_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Meeting Type"
                android:textAlignment="center"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="@android:color/white"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Item ID :"
                android:layout_marginRight="97dp"/>

            <TextView
                android:id="@+id/item_id"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_below="@+id/meeting_type"
                android:text="Item ID"
                android:textAlignment="center"
                android:textSize="18dp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Buyer ID :"
                android:layout_marginRight="90dp"/>

            <TextView
                android:id="@+id/buyer_id"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_below="@+id/item_id"
                android:text="Buyer ID"
                android:textAlignment="center"
                android:textSize="18dp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Meeting Date :"
                android:layout_marginRight="56dp"/>

            <TextView
                android:id="@+id/meeting_date"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_below="@+id/buyer_id"
                android:text="Meeting Date"
                android:textAlignment="center"
                android:textSize="18dp"
                android:textStyle="bold"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Meeting Time :"
                android:layout_marginRight="56dp"/>

            <TextView
                android:id="@+id/meeting_time"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_below="@+id/meeting_date"
                android:text="Meeting Time"
                android:layout_marginTop="2dp"
                android:textAlignment="center"
                android:textSize="16dp"
                android:textStyle="bold"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Meeting Place :"
                android:layout_marginRight="55dp"/>

            <TextView
                android:id="@+id/meeting_place"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_below="@+id/meeting_time"
                android:text="Meeting Place"
                android:layout_marginTop="2dp"
                android:textAlignment="center"
                android:textSize="16dp"
                android:textStyle="bold"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Item Quantity :"
                android:layout_marginRight="60dp"/>

            <TextView
                android:id="@+id/item_quantity"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_below="@+id/meeting_place"
                android:text="Item Quantity"
                android:layout_marginTop="2dp"
                android:textAlignment="center"
                android:textSize="16dp"
                android:textStyle="bold"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Seller ID :"
                android:layout_marginRight="95dp"/>

            <TextView
                android:id="@+id/seller_id"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_below="@+id/item_quantity"
                android:text="Seller ID"
                android:layout_marginTop="2dp"
                android:textAlignment="center"
                android:textSize="16dp"
                android:textStyle="bold"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Phone Number :"
                android:layout_marginRight="53dp"/>

            <TextView
                android:id="@+id/phoneNumber"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_below="@+id/seller_id"
                android:text="Phone Number"
                android:layout_marginTop="2dp"
                android:textAlignment="center"
                android:textSize="16dp"
                android:textStyle="bold"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/updateMeetingBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="UPDATE"
                android:layout_gravity="center"
                android:layout_marginLeft="100dp"/>

            <Button
                android:id="@+id/cancelBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CANCEL"
                android:layout_gravity="center"/>


        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>